<Muons>:
    FloatLayout:
        id: gui
        canvas.before:
            Rectangle:
                size: self.size
                source: './Relazione/images/wallpaper_GUI.jpg'
        Image:
            source: './Relazione/images/muons_GUI.gif'
            opacity: 0.1
            anim_delay: 0.05
            allow_stretch: True
            size_hint_x: None
            size_hint_y: None
            width: self.parent.width
            height: self.parent.width/self.image_ratio
        Label:
            text: 'Welcome to muon lifetime analyzer'
            font_size: 28
            pos_hint: {'left':0, 'top':0.9}
            size_hint: 1, .1
        GridLayout:
            spacing: 0, 10
            cols: 2
            rows: 5
            pos_hint: {'center_y':.5, 'center_x': 0.5}
            size_hint: 0.5, 0.5

            Button:
                font_size: 20
                text: 'Thomas.py'
                background_color: (0.0, .8, 1.0, .7)
                on_press: root.thomas()
                size_hint_x: 2/3
                size_hint_y: 1/5

            Image:
                source: './Relazione/images/Thomas_plot.png'
                allow_stretch: True
                size_hint_x: 1/3
                size_hint_y: 1/5

            Button:
                font_size: 20
                text: 'Linearity.py'
                background_color: (0.0, .8, 1.0, .7)
                on_press: root.linearity()
                size_hint_x: 2/3
                size_hint_y: 1/5
            Image:
                source: './Relazione/images/linearity_10.jpg'
                allow_stretch: True
                size_hint_x: 1/3
                size_hint_y: 1/5

            Button:
                font_size: 20
                text: 'PlotAll.py'
                background_color: (0.0, .8, 1.0, .7)
                on_press: root.plotAll()
                size_hint_x: 2/3
                size_hint_y: 1/5
            Image:
                source: './Relazione/images/characterization/rate_bias_cerbero.png'
                allow_stretch: True
                size_hint_x: 1/3
                size_hint_y: 1/5

            Button:
                font_size: 20
                text: 'Plot3D.py'
                background_color: (0.0, .8, 1.0, .7)
                on_press: root.plot3D()
                size_hint_x: 2/3
                size_hint_y: 1/5
            Image:
                source: './Relazione/images/characterization/3d_minosse.png'
                allow_stretch: True
                size_hint_x: 1/3
                size_hint_y: 1/5

            Button:
                font_size: 20
                text: 'OpenPickle.py'
                background_color: (0.0, .8, 1.0, .7)
                on_press: root.openPickle()
                size_hint_x: 2/3
                size_hint_y: 1/5
            Image:
                source: './Relazione/images/multi_files.png'
                allow_stretch: True
                size_hint_x: 1/3
                size_hint_y: 1/5

        Label:
            text: 'Luca Pesenti - l.pesenti6@campus.unimib.it'
            font_size: 13
            pos_hint: {'center_x': 0.5, 'top':0.15}
            size_hint: None, None
        Label:
            text: 'v1.2.1.1'
            font_size: 10
            pos_hint: {'center_x': 0.5, 'top':0.1}
            size_hint: None, None

<OpenPickle>:
    FloatLayout:
        id: gui
        canvas.before:
            Rectangle:
                size: self.size
                source: './Relazione/images/wallpaper_GUI.jpg'
        Image:
            source: './Relazione/images/muons_GUI.gif'
            opacity: 0.1
            anim_delay: 0.05
            allow_stretch: True
            size_hint_x: None
            size_hint_y: None
            width: self.parent.width
            height: self.parent.width/self.image_ratio
        Label:
            text: 'Choose which plot to open'
            font_size: 28
            pos_hint: {'left':0, 'top':0.9}
            size_hint: 1, .1
        GridLayout:
            spacing: 0, 10
            cols: 3
            rows: 3
            pos_hint: {'center_y':.5, 'center_x': 0.5}
            size_hint: 0.6, 0.3

            Button:
                id: single
                font_size: 20
                text: 'Single rate'
                background_color: (0.0, .8, 1.0, .7)
                on_press: root.choice(1)
                size_hint_x: 1/3
                size_hint_y: 1/3
            Button:
                id: 3D
                font_size: 20
                text: '3D plots'
                background_color: (0.0, .8, 1.0, .7)
                on_press: root.choice(2)
                size_hint_x: 1/3
                size_hint_y: 1/3
            Button:
                id: efficiency
                font_size: 20
                text: 'Efficiencies'
                background_color: (0.0, .8, 1.0, .7)
                on_press: root.choice(3)
                size_hint_x: 1/3
                size_hint_y: 1/3
            Button:
                id: uniformity
                font_size: 20
                text: 'Uniformities'
                background_color: (0.0, .8, 1.0, .7)
                on_press: root.choice(4)
                size_hint_x: 1/3
                size_hint_y: 1/3
            Button:
                id: minosse
                font_size: 20
                text: "Minosse's plots"
                background_color: (0.0, .8, 1.0, .7)
                on_press: root.choice(5)
                size_hint_x: 1/3
                size_hint_y: 1/3
            Button:
                id: caronte
                font_size: 20
                text: "Caronte's plots"
                background_color: (0.0, .8, 1.0, .7)
                on_press: root.choice(6)
                size_hint_x: 1/3
                size_hint_y: 1/3
            Button:
                id: cerbero
                font_size: 20
                text: "Cerbero's plots"
                background_color: (0.0, .8, 1.0, .7)
                on_press: root.choice(7)
                size_hint_x: 1/3
                size_hint_y: 1/3
            Button:
                id: all
                font_size: 20
                text: 'Every plot'
                background_color: (0.0, .8, 1.0, .7)
                on_press: root.choice(8)
                size_hint_x: 1/3
                size_hint_y: 1/3
        Button:
            font_size: 20
            text: 'Back'
            background_color: (0.0, .8, 1.0, .7)
            on_press: root.back()
            pos_hint: {'center_x': 0.5, 'top':0.2}
            size_hint: .3, .07
    Label:
        text: 'Luca Pesenti - l.pesenti6@campus.unimib.it'
        font_size: 13
        pos_hint: {'center_x': 0.5, 'top':0.15}
        size_hint: None, None
    Label:
        text: 'v1.2.1.1'
        font_size: 10
        pos_hint: {'center_x': 0.5, 'top':0.1}
        size_hint: None, None
